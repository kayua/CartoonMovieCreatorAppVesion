<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <ListView
        android:id="@+id/chat_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6EF0F0F0"

        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:stackFromBottom="false"
        android:transcriptMode="normal" />

    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_width="403dp"
        android:layout_height="64dp"
        android:background="#00FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="111dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp">



        </LinearLayout>

        <ImageButton
            android:id="@+id/enter_chat1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:alpha="0.8"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/msg_comentary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/button_design_fill_msg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:srcCompat="@drawable/arrow_down" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imageViewSecondImage"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/icon_general_user"
                        app:civ_border_color="#BCF1EEEE"
                        app:civ_border_width="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.047" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="185dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="133dp"
                            android:layout_height="6dp"
                            android:orientation="vertical">

                        </LinearLayout>

                        <TextView
                            android:id="@+id/dasccdasasdg"
                            android:layout_width="161dp"
                            android:layout_height="wrap_content"
                            android:text="KayuÃ£ Oleques Paim"
                            android:textColor="#838181"
                            android:textColorHint="#757474"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:orientation="vertical"></LinearLayout>

                        <TextView
                            android:id="@+id/texdtView2"
                            android:layout_width="138dp"
                            android:layout_height="wrap_content"
                            android:text="Publicado em: 28/07/21 22:06"
                            android:textColor="#333333"
                            android:textSize="7sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="105dp"
                        android:layout_height="41dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="52dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView

                                android:id="@+id/imagdeView2"
                                android:layout_width="44dp"
                                android:layout_height="21dp"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/three_dot" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="14dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="366dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/editTextTextMultiLine"
                                android:layout_width="319dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/design_text_box"
                                android:ems="10"
                                android:gravity="start|top"
                                android:hint="Digite aqui seu texto"
                                android:inputType="textMultiLine"
                                android:padding="4dp"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="right|center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/cameras" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/p" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="51dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/feito_inc" />

                        <LinearLayout
                            android:layout_width="8dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:orientation="horizontal" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

